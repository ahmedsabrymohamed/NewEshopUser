<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#302a2a">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#302a2a"
    tools:context=".ProductsMainPageActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Low Price"
        android:textColor="#fff"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/moviesGridTrend1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:paddingStart="10dp"
        android:paddingTop="16dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/moviesGrid1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:fadeScrollbars="true"
        android:paddingBottom="16dp"
        android:paddingStart="10dp"
        android:paddingTop="16dp"
        android:scrollbars="vertical" />
    <View

        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="#fff"
        android:layout_gravity="center_horizontal"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medium Price"
        android:textColor="#fff"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/moviesGridTrend2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fadeScrollbars="true"
        android:paddingBottom="16dp"
        android:paddingStart="10dp"
        android:paddingTop="16dp"
        android:scrollbars="vertical" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/moviesGrid2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:fadeScrollbars="true"
        android:paddingBottom="16dp"
        android:paddingStart="10dp"
        android:paddingTop="16dp"
        android:scrollbars="vertical" />
    <View

        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="#fff"
        android:layout_gravity="center_horizontal"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="High Price"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/moviesGridTrend3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fadeScrollbars="true"
        android:paddingBottom="16dp"
        android:paddingStart="10dp"
        android:paddingTop="16dp"
        android:scrollbars="vertical" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/moviesGrid3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:fadeScrollbars="true"
        android:paddingBottom="16dp"
        android:paddingStart="10dp"
        android:paddingTop="16dp"
        android:scrollbars="vertical" />


</LinearLayout>
</ScrollView>